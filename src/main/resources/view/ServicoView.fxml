<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="controller.ServicoController">
   <top>
      <VBox>
         <children>
            <Label styleClass="titulo" text="Gerenciamento de Serviços">
               <VBox.margin>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </top>

   <center>
      <HBox spacing="20.0">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="10.0" />
         </padding>

         <!-- COLUNA ESQUERDA - Incluir e Buscar -->
         <VBox spacing="15.0" HBox.hgrow="NEVER" prefWidth="500.0">
            <children>
               <!-- Seção de Inclusão -->
               <TitledPane expanded="true" text="Novo Serviço" collapsible="false">
                  <content>
                     <GridPane hgap="12.0" vgap="12.0">
                        <columnConstraints>
                           <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="120.0" />
                           <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" prefWidth="280.0" />
                        </columnConstraints>
                        <rowConstraints>
                           <RowConstraints minHeight="35.0" prefHeight="40.0" vgrow="SOMETIMES" />
                           <RowConstraints minHeight="35.0" prefHeight="40.0" vgrow="SOMETIMES" />
                           <RowConstraints minHeight="40.0" prefHeight="50.0" vgrow="SOMETIMES" />
                        </rowConstraints>
                        <children>
                           <Label text="Nome:" />
                           <TextField fx:id="txtNomeIncluir" promptText="Nome do serviço"
                              GridPane.columnIndex="1" />

                           <Label text="Valor (R$):" GridPane.rowIndex="1" />
                           <TextField fx:id="txtValorIncluir" promptText="Ex: 50.00"
                              GridPane.columnIndex="1" GridPane.rowIndex="1" />

                           <HBox alignment="CENTER_RIGHT" GridPane.columnIndex="1"
                              GridPane.rowIndex="2">
                              <children>
                                 <Button fx:id="btnIncluir" mnemonicParsing="false"
                                    onAction="#incluirServico" text="Incluir Serviço"
                                    prefWidth="198.0" />
                              </children>
                           </HBox>
                        </children>
                        <padding>
                           <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                        </padding>
                     </GridPane>
                  </content>
               </TitledPane>

               <!-- Seção de Busca -->
               <TitledPane expanded="true" text="Buscar Serviço" collapsible="false">
                  <content>
                     <VBox spacing="12.0">
                        <children>
                           <HBox alignment="CENTER_LEFT" spacing="10.0">
                              <children>
                                 <Label text="Buscar por:" minWidth="100.0" />
                                 <TextField fx:id="txtBuscar" promptText="ID do Serviço ou Nome"
                                    HBox.hgrow="ALWAYS" />
                              </children>
                           </HBox>
                           <HBox alignment="CENTER" spacing="10.0">
                              <children>
                                 <Button fx:id="btnBuscar" mnemonicParsing="false"
                                    onAction="#buscarServico" text="Buscar" prefWidth="132.0" />
                              </children>
                           </HBox>

                           <GridPane fx:id="gridAlteracao" hgap="12.0" vgap="12.0" visible="false">
                              <columnConstraints>
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0"
                                    prefWidth="120.0" />
                                 <ColumnConstraints hgrow="ALWAYS" minWidth="200.0"
                                    prefWidth="280.0" />
                              </columnConstraints>
                              <children>
                                 <Label text="ID:" />
                                 <TextField fx:id="txtIdAlterar" editable="false"
                                    styleClass="readonly" GridPane.columnIndex="1" />

                                 <Label text="Nome:" GridPane.rowIndex="1" />
                                 <TextField fx:id="txtNomeAlterar" GridPane.columnIndex="1"
                                    GridPane.rowIndex="1" />

                                 <Label text="Valor (R$):" GridPane.rowIndex="2" />
                                 <TextField fx:id="txtValorAlterar" GridPane.columnIndex="1"
                                    GridPane.rowIndex="2" />
                              </children>
                           </GridPane>

                           <HBox fx:id="botoesAcao" alignment="CENTER" spacing="10.0"
                              visible="false">
                              <children>
                                 <Button fx:id="btnAlterar" mnemonicParsing="false"
                                    onAction="#alterarServico" styleClass="button-primary"
                                    text="Alterar" prefWidth="132.0" />
                                 <Button fx:id="btnExcluir" mnemonicParsing="false"
                                    onAction="#excluirServico" styleClass="button-danger"
                                    text="Excluir" prefWidth="132.0" />
                              </children>
                           </HBox>
                        </children>
                        <padding>
                           <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                        </padding>
                     </VBox>
                  </content>
               </TitledPane>
            </children>
         </VBox>

         <!-- COLUNA DIREITA - Lista de Serviços por Faixa de Preço -->
         <VBox spacing="15.0" HBox.hgrow="ALWAYS" prefWidth="700.0">
            <children>
               <TitledPane expanded="true" text="Serviços por Faixa de Preço" VBox.vgrow="ALWAYS">
                  <content>
                     <VBox spacing="12.0">
                        <children>
                           <HBox alignment="CENTER_LEFT" spacing="10.0">
                              <children>
                                 <Label text="Valor Mínimo:" minWidth="100.0" />
                                 <TextField fx:id="txtValorMin" promptText="Ex: 0" prefWidth="120.0" />
                                 <Label text="Valor Máximo:" minWidth="100.0" />
                                 <TextField fx:id="txtValorMax" promptText="Ex: 100"
                                    prefWidth="120.0" />
                                 <Button fx:id="btnBuscarPorFaixa" mnemonicParsing="false"
                                    onAction="#buscarServicosPorFaixa" text="Buscar"
                                    prefWidth="110.0" />
                                 <Button fx:id="btnListarTodos" mnemonicParsing="false"
                                    onAction="#listarTodosServicos" text="Listar Todos"
                                    prefWidth="132.0" />
                              </children>
                           </HBox>
                           <ListView fx:id="listViewServicos" prefHeight="460.0" />
                        </children>
                        <padding>
                           <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                        </padding>
                     </VBox>
                  </content>
               </TitledPane>
            </children>
         </VBox>
      </HBox>
   </center>

   <bottom>
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="btnFechar" mnemonicParsing="false" onAction="#fecharJanela"
               styleClass="exit-button" text="Fechar" prefWidth="132.0" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>