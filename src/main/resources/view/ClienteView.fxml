<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ClienteController">
   <top>
      <VBox>
         <children>
            <Label styleClass="titulo" text="Gerenciamento de Clientes">
               <VBox.margin>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </top>
   
   <center>
      <HBox spacing="20.0">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="10.0" />
         </padding>
         
         <!-- COLUNA ESQUERDA - Incluir e Buscar -->
         <VBox spacing="15.0" HBox.hgrow="NEVER" prefWidth="500.0">
            <children>
               <!-- Seção de Inclusão -->
               <TitledPane expanded="true" text="Novo Cliente" collapsible="false">
                  <content>
                     <GridPane hgap="12.0" vgap="12.0">
                        <columnConstraints>
                           <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="120.0" />
                           <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" prefWidth="280.0" />
                        </columnConstraints>
                        <rowConstraints>
                           <RowConstraints minHeight="35.0" prefHeight="40.0" vgrow="SOMETIMES" />
                           <RowConstraints minHeight="35.0" prefHeight="40.0" vgrow="SOMETIMES" />
                           <RowConstraints minHeight="35.0" prefHeight="40.0" vgrow="SOMETIMES" />
                           <RowConstraints minHeight="35.0" prefHeight="40.0" vgrow="SOMETIMES" />
                           <RowConstraints minHeight="40.0" prefHeight="50.0" vgrow="SOMETIMES" />
                        </rowConstraints>
                        <children>
                           <Label text="CPF:" />
                           <TextField fx:id="txtCpfIncluir" promptText="000.000.000-00" GridPane.columnIndex="1" />
                           
                           <Label text="Nome:" GridPane.rowIndex="1" />
                           <TextField fx:id="txtNomeIncluir" promptText="Nome completo" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                           
                           <Label text="Email:" GridPane.rowIndex="2" />
                           <TextField fx:id="txtEmailIncluir" promptText="email@exemplo.com" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                           
                           <Label text="Telefones:" GridPane.rowIndex="3" />
                           <TextField fx:id="txtTelefonesIncluir" promptText="Separados por vírgula" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                           
                           <HBox alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="4">
                              <children>
                                 <Button fx:id="btnIncluir" mnemonicParsing="false" onAction="#incluirCliente" text="Incluir Cliente" prefWidth="198.0" />
                              </children>
                           </HBox>
                        </children>
                        <padding>
                           <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                        </padding>
                     </GridPane>
                  </content>
               </TitledPane>
               
               <!-- Seção de Busca -->
               <TitledPane expanded="true" text="Buscar Cliente" collapsible="false">
                  <content>
                     <VBox spacing="12.0">
                        <children>
                           <HBox alignment="CENTER_LEFT" spacing="10.0">
                              <children>
                                 <Label text="Buscar por:" minWidth="100.0" />
                                 <TextField fx:id="txtBuscar" promptText="ID, CPF, Email ou Nome" HBox.hgrow="ALWAYS" />
                              </children>
                           </HBox>
                           <HBox alignment="CENTER" spacing="10.0">
                              <children>
                                 <Button fx:id="btnBuscar" mnemonicParsing="false" onAction="#buscarCliente" text="Buscar" prefWidth="132.0" />
                              </children>
                           </HBox>
                           
                           <GridPane fx:id="gridAlteracao" hgap="12.0" vgap="12.0" visible="false">
                              <columnConstraints>
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="120.0" />
                                 <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" prefWidth="280.0" />
                              </columnConstraints>
                              <children>
                                 <Label text="ID:" />
                                 <TextField fx:id="txtIdAlterar" editable="false" styleClass="readonly" GridPane.columnIndex="1" />
                                 
                                 <Label text="CPF:" GridPane.rowIndex="1" />
                                 <TextField fx:id="txtCpfAlterar" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                 
                                 <Label text="Nome:" GridPane.rowIndex="2" />
                                 <TextField fx:id="txtNomeAlterar" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                 
                                 <Label text="Email:" GridPane.rowIndex="3" />
                                 <TextField fx:id="txtEmailAlterar" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                 
                                 <Label text="Telefones:" GridPane.rowIndex="4" />
                                 <TextField fx:id="txtTelefonesAlterar" promptText="Separados por vírgula" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                              </children>
                           </GridPane>
                           
                           <HBox fx:id="botoesAcao" alignment="CENTER" spacing="10.0" visible="false">
                              <children>
                                 <Button fx:id="btnAlterar" mnemonicParsing="false" onAction="#alterarCliente" styleClass="button-primary" text="Alterar" prefWidth="132.0" />
                                 <Button fx:id="btnExcluir" mnemonicParsing="false" onAction="#excluirCliente" styleClass="button-danger" text="Excluir" prefWidth="132.0" />
                              </children>
                           </HBox>
                        </children>
                        <padding>
                           <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                        </padding>
                     </VBox>
                  </content>
               </TitledPane>
            </children>
         </VBox>
         
         <!-- COLUNA DIREITA - Lista de Clientes -->
         <VBox spacing="15.0" HBox.hgrow="ALWAYS" prefWidth="700.0">
            <children>
               <TitledPane expanded="true" text="Clientes Cadastrados" VBox.vgrow="ALWAYS">
                  <content>
                     <VBox spacing="12.0">
                        <children>
                           <HBox alignment="CENTER_LEFT" spacing="10.0">
                              <children>
                                 <TextField fx:id="txtBuscarNome" promptText="Digite parte do nome para buscar" HBox.hgrow="ALWAYS" />
                                 <Button fx:id="btnBuscarPorNome" mnemonicParsing="false" onAction="#buscarClientesPorNome" text="Buscar por Nome" prefWidth="165.0" />
                                 <Button fx:id="btnListarTodos" mnemonicParsing="false" onAction="#listarTodosClientes" text="Listar Todos" prefWidth="132.0" />
                              </children>
                           </HBox>
                           <ListView fx:id="listViewClientes" prefHeight="520.0" />
                        </children>
                        <padding>
                           <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                        </padding>
                     </VBox>
                  </content>
               </TitledPane>
            </children>
         </VBox>
      </HBox>
   </center>
   
   <bottom>
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="btnFechar" mnemonicParsing="false" onAction="#fecharJanela" styleClass="exit-button" text="Fechar" prefWidth="132.0" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>