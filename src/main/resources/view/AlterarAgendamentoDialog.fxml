<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="controller.AlterarAgendamentoDialogController" spacing="15.0"
    styleClass="dialog-content">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>
        <Label styleClass="subtitulo" text="Detalhes do Agendamento" />

        <GridPane hgap="12.0" vgap="12.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="250.0" prefWidth="300.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="35.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="35.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="35.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="35.0" prefHeight="40.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <children>
                <Label text="CPF do Cliente:" />
                <TextField fx:id="txtCpfCliente" editable="false" styleClass="readonly"
                    GridPane.columnIndex="1" />

                <Label text="Pet:" GridPane.rowIndex="1" />
                <ComboBox fx:id="cmbPet" maxWidth="Infinity" GridPane.columnIndex="1"
                    GridPane.rowIndex="1" />

                <Label text="ServiÃ§o:" GridPane.rowIndex="2" />
                <ComboBox fx:id="cmbServico" maxWidth="Infinity" GridPane.columnIndex="1"
                    GridPane.rowIndex="2" />

                <Label text="Data:" GridPane.rowIndex="3" />
                <DatePicker fx:id="dtpData" maxWidth="Infinity" GridPane.columnIndex="1"
                    GridPane.rowIndex="3" />
            </children>
        </GridPane>

        <HBox alignment="CENTER" spacing="15.0">
            <padding>
                <Insets top="10.0" />
            </padding>
            <children>
                <Button fx:id="btnAlterar" mnemonicParsing="false" onAction="#alterarAgendamento"
                    styleClass="button-primary" text="Salvar" prefWidth="150.0" />
                <Button fx:id="btnExcluir" mnemonicParsing="false" onAction="#excluirAgendamento"
                    styleClass="button-danger" text="Excluir" prefWidth="120.0" />
            </children>
        </HBox>
    </children>
</VBox>